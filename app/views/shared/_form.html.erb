<%= form_with(model: @todo, local: true ) do |f| %>
  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :completed %>
    <%= f.text_field :completed, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.text_field :picture, class:'form-control' %>
  </div>

   <%= f.submit class: 'btn btn-info' %>
  
<% end %>